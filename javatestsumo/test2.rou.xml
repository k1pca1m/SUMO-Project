<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle types for GUI checkboxes -->
    <vType id="car"   accel="2.0" decel="4.5" sigma="0.5"
           length="5.0"  maxSpeed="20" color="1,0,0"/>
    <vType id="truck" accel="1.0" decel="4.0" sigma="0.5"
           length="12.0" maxSpeed="15" color="0,0,1"/>
    <vType id="bus"   accel="1.2" decel="4.0" sigma="0.5"
           length="10.0" maxSpeed="18" color="0,1,0"/>

    <!--
      Density guideline (per direction, 1 hour):
        low:    car 200, truck 40,  bus 20
        medium: car 400, truck 80,  bus 40  (CURRENT)
        high:   car 800, truck 160, bus 80
      Abhi medium use kar rahe hain; zarurat pe vehsPerHour adjust kar sakta hai.
    -->

    <!-- Horizontal main road: J1 -> J0  (-E0 -> -E0.40) -->
    <flow id="carFlow_neg"   type="car"   begin="0.00" end="3600.00"
          from="-E0" to="-E0.40" vehsPerHour="400"/>
    <flow id="truckFlow_neg" type="truck" begin="0.00" end="3600.00"
          from="-E0" to="-E0.40" vehsPerHour="80"/>
    <flow id="busFlow_neg"   type="bus"   begin="0.00" end="3600.00"
          from="-E0" to="-E0.40" vehsPerHour="40"/>

    <!-- Horizontal main road: J0 -> J1  (E0 -> E0.45) -->
    <flow id="carFlow_pos"   type="car"   begin="0.00" end="3600.00"
          from="E0" to="E0.45" vehsPerHour="400"/>
    <flow id="truckFlow_pos" type="truck" begin="0.00" end="3600.00"
          from="E0" to="E0.45" vehsPerHour="80"/>
    <flow id="busFlow_pos"   type="bus"   begin="0.00" end="3600.00"
          from="E0" to="E0.45" vehsPerHour="40"/>

    <!-- Side road: J5 -> J1  (E1 -> E0.45, via right turn) -->
    <flow id="carFlow_side"   type="car"   begin="0.00" end="3600.00"
          from="E1" to="E0.45" vehsPerHour="200"/>
    <flow id="truckFlow_side" type="truck" begin="0.00" end="3600.00"
          from="E1" to="E0.45" vehsPerHour="40"/>
    <flow id="busFlow_side"   type="bus"   begin="0.00" end="3600.00"
          from="E1" to="E0.45" vehsPerHour="20"/>

</routes>
